<tool id="ehpsl" name="Extract_hits_psl">
  <description> extract hits from psl file </description>
	<command><![CDATA[
    bash 'python' '{__tool_directory__}/extract_hits_psl.py' 'input_psl'
 	]]></command>
	<inputs>
		<param name="input_psl" type="data" format="psl" label="input psl file"/>
	</inputs>
	<outputs>
  		<data name="output" label="output text files" />
	</outputs>
	<help>
		This tool extracts hits from psl files
  </help>
</tool>
