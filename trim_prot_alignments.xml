<tool id="trim_prot_align" name="Trim_prot_alignments">
  <description> trims the protein alignments </description>
	<command><![CDATA[
    bash 'python' '{__tool_directory__}/trim_prot_alignments.py' 'param'
 	]]></command>
	<inputs>
		<param name="param" type="data" format="fasta" label="input parameters"/>
	</inputs>
	<outputs>
  		<data name="output" label="output fasta file" />
	</outputs>
	<help>
		This tool trims proteins based on parameters
  </help>
</tool>